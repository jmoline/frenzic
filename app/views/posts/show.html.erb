<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%=h @post.body %>
</p>
<p>
  <strong>Author:</strong>
  <%=h @post.author_id %>
</p>
<p>
  <strong>Parent:</strong>
  <%=h @post.parent_id %>
</p>
<p>
  <strong>Parent Type:</strong>
  <%=h @post.parent_type %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "View All", posts_path %>
</p>
